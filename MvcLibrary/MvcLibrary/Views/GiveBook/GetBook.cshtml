@model MvcLibrary.Models.Entity.Movement

@{
    ViewBag.Title = "GetBook";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@* Ödünç kitabı iade alma *@
<h2>Ödünç İade</h2>

@using (Html.BeginForm("GetBookUpdate", "GiveBook", FormMethod.Post))
{
    <div style="margin-top:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(x => x.MovementID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(x => x.Book.Name, new { @class = "form-control" })
        <br />
        <label>Üye</label>
        @Html.TextBoxFor(x => x.User.Name, new { @class = "form-control" })
        <br />
        <label>Personel</label>
        @Html.TextBoxFor(x => x.Employee.Employee1, new { @class = "form-control" })
        <br />
        <label>Alış Tarihi</label>
        @Html.TextBoxFor(x => x.DeliveryDate, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Son Teslim Tarihi</label>
        @Html.TextBoxFor(x => x.ReturnDate, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Üyenin Teslim Ettiği Tarih</label>
        <input type="text" class="form-control" name="UserDeliveryDate" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Geç Gelen Gün Sayısı</label>
        @*Delayinput Geç Gelen Gün Sayısı*@
        <input type="text" class="form-control" id="Delayinput" value="@ViewBag.value" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#028d01; color:white">Ödünç kitabı geri al</button>
    </div>
}
