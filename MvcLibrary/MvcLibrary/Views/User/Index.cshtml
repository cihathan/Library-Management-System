@using MvcLibrary.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>Üye ID</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifresi</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UsersID</td>
            <td>@user.Name</td>
            <td>@user.LastName</td>
            <td>@user.Mail</td>
            <td>@user.UserName</td>
            <td>@user.Password</td>
            <td>@user.Phone</td>
            <td>@user.School</td>
            <td><a href="/User/DeleteUser/@user.UsersID" class="btn btn-danger">Sil</a></td>
            <td><a href="/User/GetUser/@user.UsersID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/User/AddUser/" class="btn btn-primary">Yeni üye ekle</a>
